<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:layout_above="@id/bottomNavigationDemo"
        android:id="@+id/viewPager2Demo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_alignParentBottom="true"
        android:background="#C1DCF1"
        app:itemIconTint="@color/custom_color_nv"
        app:menu="@menu/menu_demo_bottom_navigation"
        app:itemTextColor="@color/custom_color_nv"
        android:id="@+id/bottomNavigationDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>